<main style="width:50%;margin:50px auto;">
	<h1>Sample</h1>

	<p>Multi Select (with search)</p>
	<label id="example0">Agents</label>
	{{#power-select-multiple
	  options=names
	  searchField="name"
	  selected=name0
	  renderInPlace=true
	  onchange=(action "changeName" "name0")
	  ariaLabelledBy="example0"
	  allowClear=true
	  as |username|
	}}
	  {{username.name}}
	{{/power-select-multiple}}

	<br>
	<p>Multi Select (no search)</p>
	<label id="example1">Agents</label>
	{{#power-select-multiple
	  options=names
	  searchField="name"
	  selected=name1
	  renderInPlace=true
	  onchange=(action "changeName" "name1")
	  ariaLabelledBy="example1"
	  allowClear=true
	  searchEnabled=false
	  as |username|
	}}
	  {{username.name}}
	{{/power-select-multiple}}

	<br>
	<p>Single Select (with search)</p>
