{{#if (and select.isOpen searchEnabled)}}
  <input 
    type="search" 
    class="ember-power-select-search-input ember-power-select-search-input-trigger"
    autocomplete="off" 
    autocorrect="off" 
    autocapitalize="off" 
    spellcheck="false"
    id="ember-power-select-search-input-trigger-{{select.uniqueId}}"
    value={{searchValue}}
    aria-owns={{listboxId}}
    aria-haspopup="true"
    aria-expanded="true"
    aria-autocomplete="list"
    autofocus
    aria-activedescendant={{ariaActivedescendant}}
    aria-label={{if labelText labelText null}}
    aria-labelledby={{if labelText (concat "ember-power-select-trigger-single-label-" select.uniqueId) null}}
    aria-describedby={{if errorId errorId null}}
    role="combobox"
    disabled={{select.disabled}}
    oninput={{onInput}}
    onfocus={{onFocus}}
    onblur={{onBlur}}
    onkeydown={{onKeydown}}
    tabindex={{tabindex}}>
{{else}}
  {{#if select.selected}}
    {{#if selectedItemComponent}}
      {{component selectedItemComponent extra=(readonly extra) option=(readonly select.selected) select=(readonly select)}}
    {{else}}
      <span class="ember-power-select-selected-item {{if allowClear "has-clear" ""}}">{{yield select.selected select}}</span>
    {{/if}}
  {{else}}
    {{#if (and allowNull (not search))}}
      <span class="ember-power-select-placeholder">{{allowNullLabel}}</span>
    {{else}}
      {{component placeholderComponent placeholder=placeholder}}
    {{/if}}
  {{/if}} 
{{/if}}

{{#if labelText}}
  <span id="ember-power-select-trigger-single-label-{{select.uniqueId}}" class="screen-reader-only" aria-hidden="true">{{labelText}}</span>
{{/if}}
