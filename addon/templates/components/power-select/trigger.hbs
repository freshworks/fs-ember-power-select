{{#if (and select.isOpen searchEnabled)}}
  <input 
    type="search" 
    class="ember-power-select-trigger-multiple-input"
    autocomplete="off" 
    autocorrect="off" 
    autocapitalize="off" 
    spellcheck="false"
    id="ember-power-select-trigger-multiple-input-{{select.uniqueId}}"
    value={{select.searchText}}
    aria-owns={{listboxId}}
    aria-autocomplete="list"
    aria-activedescendant={{ariaActivedescendant}}
    aria-expanded={{if dropdown.isOpen "true" "false"}}
    aria-label={{if labelText labelText null}}
    aria-labelledby={{if labelText (concat "ember-power-select-trigger-multiple-label-" select.uniqueId) null}}
    aria-describedby={{if errorId errorId null}}
    role="combobox"
    style={{triggerMultipleInputStyle}}
    placeholder={{or maybePlaceholder null}}
    disabled={{select.disabled}}
    oninput={{onInput}}
    onfocus={{onFocus}}
    onblur={{onBlur}}
    tabindex={{tabindex}}
    onkeydown={{onKeydown}}>
{{else}}
  {{#if select.selected}}
    {{#if selectedItemComponent}}
      {{component selectedItemComponent extra=(readonly extra) option=(readonly select.selected) select=(readonly select)}}
    {{else}}
      <span class="ember-power-select-selected-item {{if allowClear "has-clear" ""}}">{{yield select.selected select}}</span>
    {{/if}}
  {{else}}
    {{#if (and allowNull (not search))}}
      <span class="ember-power-select-placeholder">{{allowNullLabel}}</span>
    {{else}}
      {{component placeholderComponent placeholder=placeholder}}
    {{/if}}
  {{/if}} 
{{/if}}

{{#if labelText}}
  <span id="ember-power-select-trigger-multiple-label-{{select.uniqueId}}" class="screen-reader-only" aria-hidden="true">{{labelText}}</span>
{{/if}}
{{#if (and select.isOpen searchEnabled)}}
<p>public api open - {{select.isOpen}}</p>
{{/if}}
