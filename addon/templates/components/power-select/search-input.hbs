<input 
  type="search" 
  class="ember-power-select-search-input ember-power-select-search-input-trigger {{if hasSIC "has-selected-item-component" "has-inline-search"}}"
  autocomplete="off" 
  autocorrect="off" 
  autocapitalize="off" 
  spellcheck="false"
  id="ember-power-select-search-input-trigger-{{select.uniqueId}}"
  value={{searchValue}}
  aria-controls={{listboxId}}
  aria-autocomplete={{if allowCreateOnBlur "both" "list"}}
  placeholder={{if allowNull (if select.isOpen (or searchPlaceholder null) allowNullLabel) (if select.isOpen (or searchPlaceholder null) (or placeholder null))}}
  aria-expanded={{if select.isOpen "true" "false"}}
  aria-activedescendant={{ariaActivedescendant}}
  aria-label={{if labelText null (or ariaLabel null)}}
  aria-describedby={{ariaDescribedBy}}
  aria-labelledby={{if labelText ariaLabelledById (or ariaLabelledBy null)}}
  aria-required={{if ariaRequired "true" null}}
  role="combobox"
  autofocus={{if hasSIC true null}}
  disabled={{select.disabled}}
  oninput={{onInput}}
  onfocus={{onFocus}}
  onblur={{onBlur}}
  tabindex={{tabindex}}>