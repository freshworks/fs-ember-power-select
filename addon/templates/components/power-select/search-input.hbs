<div class="ember-power-select-inline-search">
  {{#if select.selected}}
    {{#if selectedItemComponent}}
      {{component selectedItemComponent searchEnabled=searchEnabled extra=(readonly extra) option=(readonly select.selected) select=(readonly select)}}
    {{else}}
      <span class="ember-power-select-selected-item screen-reader-only">
        {{if searchField (get select.selected searchField) select.selected}}
      </span>
    {{/if}}
  {{/if}}

  <input 
    type="search" 
    class="ember-power-select-search-input ember-power-select-search-input-trigger"
    autocomplete="off" 
    autocorrect="off" 
    autocapitalize="off" 
    spellcheck="false"
    id="ember-power-select-search-input-trigger-{{select.uniqueId}}"
    value={{searchValue}}
    aria-controls={{listboxId}}
    aria-autocomplete={{if allowCreateOnBlur "both" "list"}}
    placeholder={{or (if (and select.selected selectedItemComponent) null searchPlaceholder) null}}
    aria-expanded={{if dropdown.isOpen "true" "false"}}
    aria-activedescendant={{ariaActivedescendant}}
    aria-label={{if labelText labelText null}}
    aria-describedby={{if errorId errorId null}}
    role="combobox"
    disabled={{select.disabled}}
    oninput={{onInput}}
    onfocus={{onFocus}}
    onblur={{onBlur}}
    tabindex={{tabindex}}>
</div>